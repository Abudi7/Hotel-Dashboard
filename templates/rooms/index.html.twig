{% extends 'base.html.twig' %}

{% block title %}Rooms index{% endblock %}

{% block body %}
    <h1>Rooms index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Createdat</th>
                <th>Type</th>
                <th>Img</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for room in rooms %}
            <tr>
                <td>{{ room.id }}</td>
                <td>{{ room.name }}</td>
                <td>{{ room.description }}</td>
                <td>{{ room.price }}</td>
                <td>{{ room.createdat ? room.createdat|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ room.type }}</td>
                <td>{{ room.img }}</td>
                <td>
                    <a href="{{ path('app_rooms_show', {'id': room.id}) }}">show</a>
                    <a href="{{ path('app_rooms_edit', {'id': room.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_rooms_new') }}">Create new</a>
{% endblock %}
